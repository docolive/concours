{% extends 'base.html.twig' %}

{% block title %}Choix concours{% endblock %}

{% block body %}
{% if concourses | length == 0 %}
    <div class="alert alert-danger text-center mt-5"><h4>Pas de concours ouvert en ce moment !</h4></div>
{% else %}   
    <h4>Choisir le concours concern√©</h4>
    <table class="table table-striped table-borderd">
    <tr>
    <th>NOM</th>
    <th>Actions</th>
    </tr>
        {% for concours in concourses %}
            <tr>
            <td>{{concours.name}}</td>
            <td>
            <a href="{{ path('concours_session', {'id': concours.id}) }}">
            <button class="btn btn-primary btn-sm py-0" style="font-size: 0.8em;">Choisir ce concours</button></a>
            </td>
            </tr>
        {% endfor %}
    </table>
{% endif %}
{% endblock %}
