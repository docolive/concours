{% if echantillons | length > 0 %}
<h4 class="mt-4 text-center mb-5">Échantillons présentés dans le concours {{concours.name}}</h4>
<div class="text-center">
<a href="{{path('echantillon_add')}}"><button class="btn btn-success mb-5">Ajouter un échantillon</button></a>
</div>
<table class="table table-striped table-borderd" style="margin:10px">
<tr>
<th>Catégorie</th>
<th>Lot</th>
<th>Actions</th>
</tr>
{% for echantillon in echantillons %}
    <tr>
    <td>{{echantillon.categorie.name}}</td>
    <td>{{echantillon.lot}}</td>
    <td>
    <a href="{{ path('echantillon_edit', {'id': echantillon.id}) }}">
    <button class="btn btn-primary btn-sm py-0" style="font-size: 0.8em;">Modifier</button></a>
    {% include "echantillon/_delete_form.html.twig" %}
    </td>
    </tr>
{% endfor %}
</table>
{% else %}
  <div class="text-center mt-5">
   <a href="{{path('echantillon_add')}}"><button class="btn btn-success mt-5">Ajouter un échantillon</button></a>
  </div>
  
{% endif %}