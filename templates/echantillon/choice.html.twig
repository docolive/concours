                $('#form_echantillonId').val(ui.item.name);
                var echantillonId = ui.item.name

                var url = "{{path('echantillon_edit')}}?echantillonId="+echantillonId;
                // alert(url);
                
                $(location).prop('href', url);
            }
        });

