{% extends 'base.html.twig' %}

{% block title %}Gestion des sous-catégories{% endblock %}

{% block body %}
<a href="{{path('procede_add')}}"><button class="btn btn-success">Créer une sous-catégorie</button></a>

<table class="table table-striped table-bordered">
<tr>
<th>Nom</th>
<th>Catégorie</th>
<th>Actions</th>
</tr>
{% for procede in procedes %}
    <tr>
    <td style="text-align:left">{{procede.name}}</td>
    <td style="text-align:left">{{procede.categorie.name}}</td>
    <td>
    <a href="{{ path('procede_edit', {'id': procede.id}) }}">
    <button class="btn btn-primary btn-sm py-0" style="font-size: 0.8em;"><i class="fas fa-edit"></i></button></a>
    {% include "procede/_delete_form.html.twig" %}
    </td>
    </tr>
{% endfor %}
</table>
{% endblock %}
