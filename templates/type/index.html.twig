{% extends 'base.html.twig' %}

{% block title %}Gestion des types{% endblock %}

{% block body %}
<a href="{{path('type_add')}}"><button class="btn btn-success">Cr√©er un type</button></a>

<table class="table table-striped table-bordered">
<tr>
<th>Concours</th>
<th>ORDRE</th>
<th>NOM</th>
<th>VOLUME MIN LOT</th>
<th>NBRE MAX ECH</th>
<th>Actions</th>
</tr>
{% for type in types %}
    <tr>
    <td style="text-align:left">{{type.concours.name}}</td>
    <td>{{type.ordre}}</td>
    <td style="text-align:left">{{type.nom}}</td>
    <td style="text-align:left">{{type.volMinLot}} {{type.unite}}</td>
    <td>{{type.nbreMaxEch}}</td>
    <td>
    <a href="{{ path('type_edit', {'id': type.id}) }}">
    <button class="btn btn-primary btn-sm py-0" style="font-size: 0.8em;"><i class="fas fa-edit"></i></button></a>
    {% include "type/_delete_form.html.twig" %}
    </td>
    </tr>
{% endfor %}
</table>
{% endblock %}
