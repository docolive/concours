{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}


<div class="row justify-content-center mt-4">
<div class="col-md-4">
    <h2>Liste des utilisateurs</h2>
</div>
</div>

<div class="row mt-4 d-flex justify-content-center">

<div class="col-md-6">
<a href="{{ path('user_add') }}"><button class="btn btn-success">Ajouter un utilisateur</button></a>
</div>
</div>

<div class="row mt-4 d-flex justify-content-center">
    <div class="col-md-6">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Email</th>
                <th>Rôle</th>
                <th>Vérifié</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
        {% set superAdmin = false %}
            <tr class="align-middle">
                <td>{{ user.email }}</td>
                <td class="text-center">
                {% for role in user.roles %}
                    {% if role == 'ROLE_CANDIDAT' %}
                        Candidat
                     {% elseif role == 'ROLE_ADMIN' %}
                        Administrateur
                    {% elseif role == 'ROLE_SUPER_ADMIN' %}
                        {% set superAdmin = true %}
                    {% endif %}
                {% endfor %}
                <td>{{ user.verified }}</td>
                </td>
                <td class="text-center">
                {% if superAdmin == false %}
                    <a href="{{ path('user_edit', {'id': user.id}) }}">
                    <button class="btn btn-primary btn-sm py-0" style="font-size: 0.8em;">Modifier</button></a>
                {% endif %}
                    {# {% include "admin/user/_delete_form.html.twig" %} #}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune période pour l'instant</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

    
{% endblock %}
