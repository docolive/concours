{% extends 'base.html.twig' %}

{% block title %}{{titre}}{% endblock %}

{% block body %}


<div class="row justify-content-center mt-4">
<div class="col text-center">
    <h2>{{titre}}</h2>
</div>
</div>

<div class="row mt-4 d-flex justify-content-center">

<div class="col text-center">
<a href="{{ path('user_add') }}"><button class="btn btn-success">Ajouter un utilisateur</button></a>
</div>
</div>

<div class="row mt-4 d-flex justify-content-center">
    <div class="col mb-5">
    <table class="table table-striped table-bordered" style="font-size:0.9em;width:90%;margin:auto">
        <thead>
            <tr>
                <th>Nom Prénom</th>
                {% if email %}
                    <th>Email</th>
                    <th>Email vérifié</th>
                {% endif %}
                {% if droits %}
                    <th>Droits</th>
                {% endif %}
                <th>Echantillons</th>
                <th>Catégories</th>
                <th>Juré</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
        {% set superAdmin = false %}
        
            <tr class="align-middle">
            {% if user.profil.nom is defined %}
                <td style="text-align:left">{{ user.profil.nom }} {{ user.profil.prenom }}</td>d
                {% else %}
                    <td></td>
            {% endif %}
                {% if email %}
                    <td>{{ user.email }}</td>
                    {% if user.verified %}
                        <td>OK</td>
                    {% else %}
                        <td>NON</td>
                    {% endif %}
                {% endif %}
                {% for role in user.roles %}
                    {% if droits %}
                        <td class="text-center">
                            {% if role == 'ROLE_CANDIDAT' %}
                                Candidat / Juré
                            {% elseif role == 'ROLE_ADMIN' %}
                                Administrateur
                            {% endif %}
                        </td>
                    {% endif %}
                    {% if role == 'ROLE_SUPER_ADMIN' %}
                        {% set superAdmin = true %}
                    {% endif %}
                {% endfor %}
                <td>{{user.echantillons|length}}</td>
                <td style="text-align:left">
                {% if user.echantillons|length > 0 %}
                <ul>
                
                    {% for e in user.echantillons %}
                    <li>
                        {{e.categorie.name}}
                    </li>
                    {% endfor %}
                </ul>
                {% endif %}
                </td>
                <td>
                {% if user.profil.jure is defined and user.profil.jure == 1%}
                <ul>
                {% for d in user.profil.choixdegustation %}
                    <li>
                    {{d.name}}
                    </li>
                {% endfor %}
                </ul>
                    
                {% endif %}
                </td>
                <td class="text-center">
                {% if superAdmin == false %}
                    <a href="{{ path('user_edit', {'id': user.id}) }}">
                    <button class="btn btn-primary btn-sm py-0" style="font-size: 0.8em;"><i class="fas fa-edit"></i></button></a>
                {% endif %}
                    {# {% include "admin/user/_delete_form.html.twig" %} #}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune période pour l'instant</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

    
{% endblock %}
