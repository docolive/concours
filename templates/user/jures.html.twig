{% extends 'base.html.twig' %}

{% block title %}Liste des jurés{% endblock %}

{% block body %}


<div class="row justify-content-center mt-4">
<div class="col text-center">
    <h2>Liste des jurés</h2>
</div>
</div>

<div class="row mt-4 d-flex justify-content-center">

<div class="col text-center">
<a href="{{ path('user_add') }}"><button class="btn btn-success">Ajouter un juré</button></a>
</div>
</div>

<div class="row mt-4 d-flex justify-content-center">
    <div class="col mb-5" >
    <table class="table table-striped table-bordered" style="font-size:0.9em;width:90%;margin:auto">
        <thead>
            <tr>
                <th>Nom Prénom</th>
                {# <th>Email</th> #}
                <th>Catégories présentées au concours</th>
                <th>Catégories dégustation souhaitées</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for u in tab %}
            <tr class="align-middle">
                <td style="text-align:left">{{ u.nom }}</td>
                {# <td>{{ u.email }}</td> #}
                <td style="text-align:left">
                <ul>
                    {% for c in u.categorie %}
                    <li>
                        {{c}}
                    </li>
                    {% endfor %}
                </ul>
                </td>
                <td style="text-align:left">
                    <ul>
                    {% for d in u.degust %}
                        <li>
                        {{d}}
                        </li>
                    {% endfor %}

                    </ul>
                </td>
                <td class="text-center">
                    <a href="{{ path('user_edit', {'id': u.id}) }}">
                    <button class="btn btn-primary btn-sm py-0" style="font-size: 0.8em;"><i class="fas fa-edit"></i></button></a>
                    {# {% include "admin/user/_delete_form.html.twig" %} #}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune période pour l'instant</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

    
{% endblock %}
